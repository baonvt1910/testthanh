<!DOCTYPE html>
<html>
{{>head title=this.title subpage='Page X' }}

<body>
    {{>header  title=this.title}}

    <main>
        <ol>
            <h1>Fruit Live Search</h1>
            <form>
            <input type="text" size="30" onkeyup="showResult(this.value)" />
            <div id="livesearch" class="hide"></div>
            </form>
            <script src="models/search.js"></script>


            <div id="producttop"class="container" style="margin-top: 60px;">
            <h1 style="text-align: center;">&#x2728;{{title}} &#x2728;</h1>
            <div id="searchWrapper" style="font-size: 30px;">
                <input type="text" 
                name="searchBar" 
                id="livesearch" 
                placeholder="search for a product"
                onkeyup="showResults(this.value)"/>
            <form method="get" action="\product\new"><button type="submit">Add a new product</button></form>
            </div>
            {{#each product}}
            {{!add id="productList, "}}
            <li id="productsList" style="display:inline-block">
                <div class="card">
                    <H2 id="productName">{{ProductName}}</H2>
                    <img class="productimg" style="height: 200px" src="/{{ImgLink}}">
                    <H3 class="price">Giá: {{Price}}</H3>
                    <BR> Thông tin sản phẩm
                    <p>
                        {{Information}}
                    </p>
                    <BR> Unit: {{Unit}}
                    <p><button>Add to Cart</button></p>
                </div>
            </li>
            {{/each}}
            </div>
            <br>
        </ol>
    </main>
    

    {{>footer}}
</body>

</html>